<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gcsun.dao.UserDao">

    <select id="login" parameterType="User" resultType="User">
        SELECT
            *
        FROM
            user
        WHERE
            userName=#{userName} and userPass=#{userPass}
    </select>
    
    <insert id="regin" parameterType="User">
        INSERT INTO
            user(userId,userName,userPass,userTel,userEmail)
        VALUES
            (#{userId},#{userName},#{userPass},#{userTel},#{userEmail})
    </insert>


    <update id="updateUser" parameterType="User">
        UPDATE
            user
        SET
			userName=#{userName},userPass=#{userPass},userTel=#{userTel}
		WHERE
			userId=#{userId}
    </update>

    <select id="findUserName" parameterType="String" resultType="User">
        SELECT
            *
        FROM
            user
        WHERE
            userName=#{userName}
    </select>
</mapper>