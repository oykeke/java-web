<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gcsun.dao.CartDao">
    <!-- 添加商品 -->
    <insert id="addProduct" parameterType="Cart">
        INSERT INTO
            cart(userId,bookId,cartId,bookName,bookWriter,bookPrice,bookNum)
        VALUES
            (#{userId},#{bookId},#{cartId},#{bookName},#{bookWriter},#{bookPrice},#{bookNum})
    </insert>
    <!-- 查询所有商品 -->
    <select id="findAllCart" parameterType="String" resultType="Cart">
        SELECT
            userId,bookId,cartId,bookName,bookWriter,bookPrice,bookNum
        FROM
            cart
        WHERE
            userId = #{userId}
    </select>

    <!-- 删除购物车商品 -->
    <delete id="deleteProduct" parameterType="String">
        DELETE FROM cart WHERE cartId = #{cartId}
    </delete>
</mapper>